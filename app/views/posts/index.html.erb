<h1>Articles</h1>

<%= link_to 'Add Articles', new_post_path, class: 'btn btn-primary me-2 mt-5 mb-5' %>
<br>

<table class="table table-striped table-hover table-bordered">
  <thead>
    <tr>
      <th>ID</th>
      <th>Title</th>
      <th>Description</th>
      <th colspan="4" class="text-center">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.id %></td>
        <td><%= link_to post.title, post, class: 'text-decoration-none' %></td>
        <td><%= simple_format(post.content) %></td>
        <td class="text-center"><%= link_to 'View PDF', post_path(post, format: :pdf), class: 'btn btn-dark me-2' %>
        <%# <td><%= link_to 'Show', post, class: 'btn btn-primary' %>
        <%= link_to 'Edit', edit_post_path(post), class: 'btn btn-primary me-2' %>
        <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <td colspan="4" class="p-3">
      <%= link_to "Generate PDF List", posts_path(format: :pdf), class: 'btn btn-primary' %></span>
      </td>
    </tr>
  </tfoot>
</table>
